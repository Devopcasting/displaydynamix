# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# CORS Configuration for Network Access
# Use '*' for development to allow any origin
NEXT_PUBLIC_CORS_ALLOWED_ORIGINS=http://localhost:9002,http://127.0.0.1:9002,http://localhost:3000,http://127.0.0.1:3000,*

# For production, specify exact origins:
# NEXT_PUBLIC_CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

NEXT_PUBLIC_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
NEXT_PUBLIC_CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin,Access-Control-Request-Method,Access-Control-Request-Headers
NEXT_PUBLIC_CORS_ALLOW_CREDENTIALS=true

# Client Configuration
NEXT_PUBLIC_CLIENT_PORT=9002

# Feature Flags
NEXT_PUBLIC_FEATURE_USER_MANAGEMENT=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_SCHEDULING=true
NEXT_PUBLIC_FEATURE_MEDIA_UPLOAD=true 